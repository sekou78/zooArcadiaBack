{% extends 'base.html.twig' %}

{% block title %}ServiceRestaurant index{% endblock %}

{% block body %}
    <h1>ServiceRestaurant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>HeureService</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service_restaurant in service_restaurants %}
            <tr>
                <td>{{ service_restaurant.id }}</td>
                <td>{{ service_restaurant.nom }}</td>
                <td>{{ service_restaurant.description }}</td>
                <td>{{ service_restaurant.heureService ? service_restaurant.heureService|date('H:i:s') : '' }}</td>
                <td>{{ service_restaurant.createdAt ? service_restaurant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ service_restaurant.updatedAt ? service_restaurant.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_service_restaurant_show', {'id': service_restaurant.id}) }}">show</a>
                    <a href="{{ path('app_service_restaurant_edit', {'id': service_restaurant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_service_restaurant_new') }}">Create new</a>
{% endblock %}
